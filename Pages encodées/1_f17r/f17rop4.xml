                </choice> m<choice>
                    <orig/>
                    <reg>'</reg>
                </choice>a faictes, et <subst>
                    <del facs="#f17rop4_f17rop4_i_sente" seq="1" xml:id="f17rop4_sente"><undo
                            facs="#f17rop4_f17rop4_i_soulignement" rend="underlined"
